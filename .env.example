# ===========================================
# ZENNA AGENT CONFIGURATION
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# REQUIRED: Authentication (NextAuth)
# ===========================================
# Secret key for NextAuth (generate with: openssl rand -base64 32)
AUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Admin email (Father of Zenna - has role management privileges)
ADMIN_EMAIL=anthony@anthonywestinc.com

# Legacy: Master password (being replaced by OAuth)
MASTER_PASSWORD=your-master-password-here

# ===========================================
# REQUIRED: OAuth Providers
# ===========================================
# Google OAuth - Get from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign In - Get from https://developer.apple.com
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# GitHub OAuth - Get from https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# REQUIRED: Stripe (Payments)
# ===========================================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ===========================================
# REQUIRED: ElevenLabs (TTS)
# ===========================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=NNl6r8mD7vthiJatiJt1

# ===========================================
# REQUIRED: Deepgram (ASR/STT)
# ===========================================
DEEPGRAM_API_KEY=your-deepgram-api-key

# ===========================================
# REQUIRED: Default LLM (Gemini 2.5 Flash)
# ===========================================
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ===========================================
# REQUIRED: Memory Storage
# ===========================================
# Supabase (short-term memory + auth)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Pinecone (long-term RAG memory)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=zenna-memory
PINECONE_ENVIRONMENT=your-pinecone-environment

# ===========================================
# OPTIONAL: Alternative LLM Providers
# ===========================================
# Users can provide their own keys in settings
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ===========================================
# OPTIONAL: Smart Home Integrations
# ===========================================
# Philips Hue
HUE_BRIDGE_IP=
HUE_USERNAME=

# UniFi Protect (stubbed for v2)
# UNIFI_HOST=
# UNIFI_USERNAME=
# UNIFI_PASSWORD=

# Lutron Caseta (stubbed for v2)
# LUTRON_BRIDGE_IP=
# LUTRON_KEY=

# SmartThings (stubbed for v2)
# SMARTTHINGS_PAT=

# ===========================================
# OPTIONAL: External Context Integrations
# ===========================================
# Notion OAuth (Public Integration)
# Get these from https://www.notion.so/my-integrations
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# ===========================================
# OPTIONAL: Philips Hue OAuth (Cloud API)
# ===========================================
# Get these from https://developers.meethue.com/
HUE_CLIENT_ID=
HUE_CLIENT_SECRET=

# ===========================================
# ZENNA-MCP GATEWAY (Internet Intelligence)
# ===========================================
# Centralized gateway for internet services (Tavily search, etc.)
# See: https://github.com/BatmanInThePines/ZennaMCP
ZENNA_MCP_URL=https://your-zennamcp.railway.app
ZENNA_MCP_SECRET=your-shared-secret-here

# ===========================================
# DEPLOYMENT
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
